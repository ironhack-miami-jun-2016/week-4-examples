<h2>
  Add a new time entry for
  <%= @my_project.name %>
</h2>


<% if @my_entry.errors.any? %>
  <ul>
    <% @my_entry.errors.full_messages.each do |error_string| %>
      <li> <%= error_string %> </li>
    <% end %>
  </ul>
<% end %>


<%= form_for [ @my_project, @my_entry ] do |f| %>
  <div>
    <%= f.label :hours %>
    <%= f.number_field :hours %>
  </div>

  <div>
    <%= f.label :minutes %>
    <%= f.number_field :minutes %>
  </div>

  <div>
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </div>

  <div>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

  <%= f.button %>
<% end %>
